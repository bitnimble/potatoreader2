{
  "compilerOptions": {
    "experimentalDecorators": true,
    "importHelpers": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "es2018",
      "es2019",
      "es2020",
      "esnext"
    ],
    "moduleResolution": "node",
    "strict": true,
    "target": "es6",
    "sourceMap": true,
    "module": "commonjs",
    "baseUrl": "src",
    "rootDir": ".",
    "outDir": "dist"
  },
  "include": ["src", "config"]
}
